{% extends 'base.html' %}

{% block title %}Digital Marketplace - StreamAd Exchange{% endblock %}

{% block content %}
<div class="marketplace-page">
 <header class="marketplace-header">
  <h1 class="section-title">
   Digital Marketplace
  </h1>
  <p class="subtitle readable-text">
   Explore and Invest in Digital Assets
  </p>
 </header>
 <div class="marketplace-content">
  <!-- Market Categories -->
  <section class="market-categories">
   <div class="category-grid">
    <div class="category-card">
     <i class="fas fa-chart-line">
     </i>
     <h3 class="section-title">
      Stocks
     </h3>
     <p class="readable-text">
      Trade global stocks and ETFs
     </p>
     <button class="explore-btn hub-link">
      Explore Stocks
     </button>
    </div>
    <div class="category-card">
     <i class="fab fa-bitcoin">
     </i>
     <h3 class="section-title">
      Cryptocurrency
     </h3>
     <p class="readable-text">
      Buy and sell digital currencies
     </p>
     <button class="explore-btn hub-link">
      Trade Crypto
     </button>
    </div>
    <div class="category-card">
     <i class="fas fa-palette">
     </i>
     <h3 class="section-title">
      NFTs
     </h3>
     <p class="readable-text">
      Discover unique digital assets
     </p>
     <button class="explore-btn hub-link">
      Browse NFTs
     </button>
    </div>
    <div class="category-card">
     <i class="fas fa-building">
     </i>
     <h3 class="section-title">
      Real Estate
     </h3>
     <p class="readable-text">
      Invest in digital real estate
     </p>
     <button class="explore-btn hub-link">
      View Properties
     </button>
    </div>
   </div>
  </section>
  <!-- Featured Assets -->
  <section class="featured-assets">
   <h2 class="section-title">
    Featured Assets
   </h2>
   <div class="assets-grid">
    <!-- Asset cards will be dynamically loaded -->
   </div>
  </section>
 </div>
</div>
{% endblock %}
